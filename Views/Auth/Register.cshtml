@model Dotnet_OngPhuong.Models.User

@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="min-width: 350px; max-width: 450px; width: 100%; border-radius: 1rem;">
        <div class="text-center mb-4">
            <h2 class="fw-bold">📝 Đăng ký tài khoản</h2>
            <p class="text-muted">Tạo tài khoản mới để bắt đầu</p>
        </div>

        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label class="form-label fw-semibold">👤 Tên đăng nhập</label>
                <input asp-for="UserName" class="form-control rounded-pill" placeholder="Nhập tên đăng nhập" required />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">🔒 Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Nhập mật khẩu" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger py-2">@ViewBag.Error</div>
            }

            <div class="d-grid mt-3">
                <button type="submit" class="btn btn-success rounded-pill fw-bold">Đăng ký</button>
            </div>
        </form>
    </div>
</div>
